
@{
    ViewData["Title"] = "Index";
}


<div class="p-4" style="border-radius:20px">
    <div class="row">
        <div class="col-6">
            <h3 class="text-info">Trail Park list</h3>
        </div>
        <div class="col-6 text-right">
            <a href="@Url.Action("Upsert","Trail",new { id=0})" class="btn btn-outline-info"> <span class="fas fa-plus"></span> Create New</a>
        </div>
    </div>
    <br />
    <br />
    <div style="background-color:#cde8e2" class="p-4 rounded">
        <table id="tblData" class="table table-striped table-bordered" style="width:100%">
            <thead>
                <tr class="table-danger">
                    <td>National Park</td>
                    <td>Trail Name</td>
                    <td>Distance</td>
                    <td>Elevation</td>
                    <td></td>
                </tr>
            </thead>

        </table>
    </div>
</div>


