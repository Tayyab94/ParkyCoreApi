@model Parky.Web.Models.ViewModels.TrailVM
@{
    ViewData["Title"] = " Create new ";

    var title = "Crete New Trail";
}

<form method="post" asp-action="Upsert" enctype="multipart/form-data">

    <div class="row px-2 mx-2 backgroundWhite border">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        @if (Model.Trail.Id != 0)
        {
            <input type="hidden" asp-for="Trail.Id" />
            title = "Edit Record";
        }
        <div class="col-12 p-3">
            <h2 class="text-primary">@title</h2>
        </div>
        <div class="col-8">
            <div class="form-group row">
                <div class="col-4">
                    National Park
                </div>
                <div class="col-8">
                    @Html.DropDownListFor(s => s.Trail.NationalParkId, Model.NationalParkList, "-Please Select National Park", new { @class = "form-control" })

                    @*<input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>*@
                </div>

                <div class="col-4">
                    <label asp-for="Trail.Name"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Trail.Name" class="form-control" />
                    <span asp-validation-for="Trail.Name" class="text-danger"></span>
                </div>


                <div class="col-4">
                    <label asp-for="Trail.DifficultyTypes"></label>
                </div>
                <div class="col-8">
                    <select asp-for="Trail.DifficultyTypes" asp-items="Html.GetEnumSelectList<Trail.DifficultyType>()" class="form-control"></select>
                    @*<input asp-for="Trail.Name" class="form-control" />
            <span asp-validation-for="Trail.Name" class="text-danger"></span>*@
                </div>


                <div class="col-4">
                    <label asp-for="Trail.Distance"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Trail.Distance" class="form-control" />
                    <span asp-validation-for="Trail.Distance" class="text-danger"></span>
                </div>

                <div class="col-4">
                    <label asp-for="Trail.Elevation"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Trail.Elevation" class="form-control" />
                    <span asp-validation-for="Trail.Elevation" class="text-danger"></span>
                </div>

                
            </div>
            <div class="form-group row">
                <div class="col-4 offset-4">
                    <button type="submit" class="btn btn-primary">
                        @(Model.Trail.Id!=0?"Update":"Create")
                    </button>
                </div>
                <div class="col-4">
                    <a class="btn btn-success form-control">Back to List</a>
                </div>
            </div>
        </div>

        
    </div>

</form>


